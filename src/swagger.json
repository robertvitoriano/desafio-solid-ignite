  "paths": {
    "/users": {
      "post": {
        "tags": [
          "users"
        ],
        "summary": "create user",
        "description": "Create a new user",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  }
                },
                "example": {
                  "name": "some name",
                  "email": "email example"
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      },
      "get": {
        "tags": [
          "users"
        ],
        "summary": "List all users",
        "description": "List all users",
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "name": {
                      "type": "string"
                    },
                    "email": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }, 
    "/users/:user_id/admin": {
      "patch": {
        "tags": [
          "users"
        ],
        "summary": "Turn Admin",
        "description": "Turn user an admin",
        "responses": {
          "201": {
            "description": "user became admin"
          },
          "500": {
            "description": "Internal server error"
          }
        }
      }
    },
    "/users/:user_id":{
      "tags": [
        "users"
      ],
      "summary": "Show user profile",
      "description": "Show specific user profile",
      "responses": {
        "200": {
          "description": "Success",
          "content": {
            "application/json": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "definitions": {
    "Specifications": {
      "type": "object",
      "properties": {
